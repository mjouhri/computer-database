<?xml version="1.0" encoding="UTF-8"?>

<web-app>


	<servlet>
		<servlet-name>ListComputersServlet</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.ListComputersServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AddComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.AddComputerServlet</servlet-class>
	</servlet>

	<servlet-mapping>    
		<servlet-name>ListComputersServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddComputerServlet</servlet-name>
		<url-pattern>/addcomputer</url-pattern>
	</servlet-mapping>
	
</web-app>